/* estilo del login */
QFrame[tipo="espacio_form"]{
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #3fea87, stop:1 #00770e);

	border-radius:20px;
}


QLineEdit[tipo="login"]{
	padding:5px 10px;
	font: 16pt "Segoe UI";
	border-radius:12px;
	background-color: rgb(255, 255, 255);
	color: rgb(0, 0, 0);
}


QPushButton{
	background-color: #005c2f;
	font: 75 14pt "Arial";
	color: rgb(255, 255, 255);
	border-radius:12px;
}

QPushButton:hover{
	background-color: rgb(0, 56, 10);
}

QLabel[tipo="texto"]{

	font: 15pt "Segoe UI";
	padding-left:1px;
	font-weight: 500;

