/* 8. QDateEdit */

/* CONTENEDOR PRINCIPAL */
QDateEdit {
    background: rgb(255,255,255);
    color: rgb(0, 0, 0);
	border:1px solid black;
    font: 14px "Segoe UI";
	font-weight: 500;
    border-radius: 12px;
    padding: 4px 6px;
}


/* FOCUS */
QDateEdit:focus {
   border: 2px solid rgb(25, 213, 100);         
    background-color: rgb(239, 239, 239);
}


/* BOTONES DE SUBIR Y BAJAR */
QDateEdit::up-button {
    width: 35px;
    background: red;
    border: none;
	margin:0px;
	border-top-right-radius:10px;
	image: url(:/iconos/imagenes/chevron-up.png);
	background:qlineargradient(spread:pad, x1:0, y1:0.545, x2:1, y2:0.545364, 			stop:0 rgba(43, 237, 121, 255), stop:1 rgba(0, 170, 97, 255));
}


QDateEdit::down-button{
    width: 35px;
    background: red;
    border: none;
	border-bottom-right-radius:10px;
	image: url(:/iconos/imagenes/chevron-down.png);
background:qlineargradient(spread:pad, x1:0, y1:0.545, x2:1, y2:0.545364, 			stop:0 rgba(43, 237, 121, 255), stop:1 rgba(0, 170, 97, 255));

}



/* HOVER A LOS BOTONES */
QDateEdit::up-button:hover {
    background: rgb(2, 150, 84);
}


QDateEdit::down-button:hover{
     background: rgb(2, 150, 84);
}


QDateEdit::drop-down {
	width:35px;
	background:qlineargradient(spread:pad, x1:0.551, y1:0, x2:0.511, y2:1, stop:0 rgba(25, 213, 100, 255), stop:1 rgba(0, 170, 97, 255));
	image: url(:/iconos/iconos_de_interfaz/chevron-down.png);
	border-top-right-radius:10px;
	border-bottom-right-radius:10px;
}

QDateEdit::drop-down:hover {
	width:35px;
	background:rgb(6, 179, 100)
}

