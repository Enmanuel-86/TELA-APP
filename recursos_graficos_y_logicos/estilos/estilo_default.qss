/* 6. QComboBoxs */


QComboBox{
	background:#ffffff;
	font: 14pt "Segoe UI";
	border-radius:12px;	
	border:1px solid #1e1e1e;
	padding-left:10px;
}

QComboBox::drop-down {
	width:35px;
	background:qlineargradient(spread:pad, x1:0.551, y1:0, x2:0.511, y2:1, stop:0 rgba(25, 213, 100, 255), stop:1 rgba(0, 170, 97, 255));
	image: url(:/iconos/iconos_de_interfaz/chevron-down.png);
	border-top-right-radius:10px;
	border-bottom-right-radius:10px;
}

QComboBox QAbstractItemView {
    background: #ffffff;
	color:#000000;
	padding: 10px 5px;
	border-left:2px solid rgb(25, 213, 100);
	border-right:2px solid rgb(25, 213, 100);
	border-bottom:2px solid rgb(25, 213, 100);
    selection-background-color: rgb(60, 56, 214);
}

QComboBox:hover {
    border: 2px solid rgb(25, 213, 100);   
	border-radius:12px;    
}

/* Focus azul vibrante tipo Material/Windows */
QComboBox:focus {
    border: 2px solid rgb(25, 213, 100);       
    /*color: #0D47A1;*/
}

QComboBox::drop-down:pressed{
	background-color: rgb(0, 170, 97);
}

