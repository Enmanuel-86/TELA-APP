/* 3. QLineEdits */

QLineEdit{
	background-color: rgb(255, 255, 255);
	color: rgb(0, 0, 0);
	border:1px solid #1e1e1e;
	padding:5px 10px;
	font: 14pt "Segoe UI";
	border-radius:12px;
}

QLineEdit:hover {
    border: 2px solid #00aa61;       
}

QLineEdit:focus {
    border: 2px solid rgb(25, 213, 100);         
    background-color: rgb(239, 239, 239);  
}

/* Placeholder más visible, moderno */
QLineEdit::placeholder {
    color: #7F8C8D;
    font-style: italic;
}

/* Estilo para QLineEdit cuando está deshabilitado */
QLineEdit:disabled {
    background-color: #F0F0F0;    /* Gris claro para diferenciarlo del blanco activo */
    border: 2px solid #C0C0C0;    /* Borde más apagado */
    color: #A0A0A0;               /* Texto gris tenue */
    border-bottom: 2px solid #B0B0B0; /* Mantener línea inferior sutil */
}

