/* 7. QRadioButtons */
/*Estilo para el QRadioButton*/

QRadioButton {
    color: #ecf0f1;
    spacing: 8px;
    padding: 0px;
	font: 10pt "Segoe UI";
}

QRadioButton::indicator {
    width: 12px;
    height: 12px;
    border-radius:8px;
    border: 2px solid rgb(143, 143, 143);
    background-color: rgb(30, 30, 30);
}

QRadioButton::indicator:checked {
    border: 3px solid  qlineargradient(spread:pad, x1:0, y1:0.545, x2:1, y2:0.545364, stop:0 rgba(25, 213, 100, 255), stop:1 rgba(0, 170, 97, 255));
}

QRadioButton::indicator:hover {
    border:  2px solid #00aa61;
}

QRadioButton::indicator:checked:hover {
    border:  3px solid #00aa61;;

}

