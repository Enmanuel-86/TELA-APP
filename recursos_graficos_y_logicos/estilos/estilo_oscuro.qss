/* 4. QLabels */

QLabel{
	color: rgb(255, 255, 255);
	border:none;
	background:none;
	font: 20pt "Segoe UI";
	font-weight:500;
}


/*Este label son los que le dan un titulo a un qlineedit*/
QLabel[tipo="titulo_qlineedit"]{
	font: 11pt "Segoe UI";
	font-weight: 500;
}

/*Este label son los que le dan un titulo del formulario*/
QLabel[tipo="titulo_form"]{
	font: 32pt "Segoe UI";
	padding-left:1px;
	font-weight: 500;

}

QLabel[tipo="texto"]{
	font: 15pt "Segoe UI";
	padding-left:1px;
	font-weight: 500;

}

/*Este label son los que le dan un titulo a un segmento*/
QLabel[tipo="titulo_segmento"]{
	font: 25pt "Segoe UI" bold;
	font-weight: 500;
}

QLabel[tipo="titulo_qdateedit"]{
	font: 8pt "Segoe UI";
	padding-left:1px;
	font-weight: 500;

}




