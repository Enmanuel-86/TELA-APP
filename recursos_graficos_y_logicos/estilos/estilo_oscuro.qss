/* 6. QComboBox */

/*Estilo para el combobox*/

QComboBox{
	background:rgb(30, 30, 30);
	font: 12pt "Segoe UI";
	border-radius:12px;	
	border:1px solid #1e1e1e;
	padding-left:10px;
	color:#ffffff;
}

QComboBox::drop-down {
	width:35px;
	background:qlineargradient(spread:pad, x1:0, y1:0.545, x2:1, y2:0.545364, 			stop:0 rgba(43, 237, 121, 255), stop:1 rgba(0, 170, 97, 255));
	image: url(:/iconos/iconos_de_interfaz/chevron-down.png);
	border-top-right-radius:10px;
	border-bottom-right-radius:10px;
}

QComboBox QAbstractItemView {
    background: rgb(66, 62, 64);
	color:#ffffff;
	padding: 10px 5px;
	border-left:2px solid rgb(25, 213, 100);
	border-right:2px solid rgb(25, 213, 100);
	border-bottom:2px solid rgb(25, 213, 100);
    selection-background-color: rgb(60, 56, 214);
}

QComboBox:focus {
    border: 2px solid rgb(25, 213, 100);         
    background-color: rgb(48, 48, 48); 
}

QComboBox::drop-down:pressed{
	background-color: rgb(0, 170, 97);
}

QComboBox::drop-down:hover{
background: rgb(2, 150, 84);
}



